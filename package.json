{
	"name": "sms",
	"version": "0.0.1",
	"main": "dist/src/server.js",
	"scripts": {
		"start": "export NODE_ENV=production && node --no-warnings ./dist/src/server.js",
		"dev": "concurrently --kill-others --names \"EXPRESS,TAILWIND\" -c \"bgGreen.black,bgCyan.black\" \"npm run dev:server\" \"npm run dev:tailwind\"",
		"dev:inspect": "npm run build && npm run db:prepare:prod && export NODE_ENV=development && node --inspect ./dist/src/server.js",
		"dev:server": "export NODE_ENV=development && npm run db:prepare:dev && tsx watch --no-warnings --clear-screen=false ./src/server.ts",
		"dev:tailwind": "npx tailwindcss -i ./public/tailwind.css -o ./public/style.css --watch",
		"build:server": "tsc",
		"build": "npm run build:server",
		"build:tailwind": "npx tailwindcss -i ./public/tailwind.css -o ./public/style.css --minify",
		"build:tailwind:colors": "node --no-warnings ./src/utils/tailwind.js",
		"deps:update": "npx npm-check -u",
		"deps:check": "npx depcheck",
		"test:unit": "echo 'not yet'",
		"test:browser:headless": "npx playwright test",
		"test:browser": "npx playwright test --ui",
		"test:watch": "NODE_ENV=testing  vitest",
		"test": "NODE_ENV=testing vitest --run",
		"test:coverage": "NODE_ENV=testing vitest run --coverage",
		"format:check": "prettier --check .",
		"format:verbose": "prettier --write --cache .",
		"format": "prettier --write --cache . > /dev/null",
		"lint:check": "eslint .",
		"lint": "eslint --fix --cache .",
		"db:prepare:dev": "npm run db:migrate:latest && npm run db:seed:run",
		"db:prepare:prod": "npm run db:migrate:latest:prod",
		"db:migrate:make": "tsx ./node_modules/knex/bin/cli.js migrate:make --knexfile=./src/db/knexfile.ts",
		"db:migrate:latest:prod": "knex migrate:latest --knexfile=./dist/src/db/knexfile.js",
		"db:migrate:latest": "tsx ./node_modules/knex/bin/cli.js migrate:latest --knexfile=./src/db/knexfile.ts",
		"db:migrate:rollback": "tsx ./node_modules/knex/bin/cli.js migrate:rollback --knexfile=./src/db/knexfile.ts",
		"db:migrate:rollback:prod": "knex migrate:rollback --knexfile=./dist/src/db/knexfile.js",
		"db:seed:make": "tsx ./node_modules/knex/bin/cli.js seed:make --knexfile=./src/db/knexfile.ts",
		"db:seed:run": "tsx ./node_modules/knex/bin/cli.js seed:run --knexfile=./src/db/knexfile.ts",
		"db:seed:run:prod": "knex seed:run --knexfile=./dist/src/db/knexfile.js",
		"rmds": "find . -name '.DS_Store' -delete"
	},
	"keywords": [
		"sms",
		"email"
	],
	"author": "wajeht",
	"license": "MIT",
	"engines": {
		"node": ">=22.3.0"
	},
	"description": "find sms mail address of a phone number",
	"dependencies": {
		"axios": "^1.7.9",
		"better-sqlite3": "^11.7.2",
		"compression": "^1.7.5",
		"connect-flash": "^0.1.1",
		"connect-session-knex": "^5.0.0",
		"cors": "^2.8.5",
		"csrf-sync": "^4.0.3",
		"dotenv": "^16.4.7",
		"ejs": "^3.1.10",
		"express": "^5.0.1",
		"express-ejs-layouts": "^2.5.1",
		"express-session": "^1.18.1",
		"helmet": "^8.0.0",
		"jsdom": "^26.0.0",
		"knex": "^3.1.0",
		"knex-paginate": "^3.2.0",
		"node-cron": "^3.0.3",
		"pino": "^9.6.0",
		"pino-pretty": "^13.0.0"
	},
	"devDependencies": {
		"@types/compression": "^1.7.5",
		"@types/connect-flash": "^0.0.40",
		"@types/cors": "^2.8.17",
		"@types/ejs": "^3.1.5",
		"@types/express-ejs-layouts": "^2.5.4",
		"@types/express-session": "^1.18.1",
		"@types/jsdom": "^21.1.7",
		"@types/node-cron": "^3.0.11",
		"@typescript-eslint/eslint-plugin": "^7.16.1",
		"@typescript-eslint/parser": "^7.18.0",
		"concurrently": "^9.1.2",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-prettier": "^5.2.2",
		"eslint-plugin-unused-imports": "^4.1.4",
		"nodemon": "^3.1.9",
		"prettier": "^3.4.2",
		"tailwindcss": "^3.4.17",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3"
	}
}
